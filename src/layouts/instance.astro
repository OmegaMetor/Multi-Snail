---
import MenuButton from "../components/MenuButton.astro";
const { name, icon } = Astro.props;
---

<div class="Instance">
    <img class="Icon" src={icon} height="100%" />
    <div class="Name">{name}</div>
    <div class="InstallInfo">
        <p class="GameVer">Version 1.0</p>
        <p class="ModLoader">Patch + Gmml with 72 mods</p>
    </div>
    <div class="InstanceInteractions">
        <MenuButton Label="Start Instance" icon="play" fill="True" />
        <MenuButton Label="Edit Instance" icon="cog" fill="True" />
        <MenuButton
            Label="Delete Instance"
            icon="trash"
            fill="True"
            manager="instanceDeleteButton(this)"
        />
    </div>
</div>

<style>
    .p {
        margin: auto;
        padding: 0;
    }
    .Icon {
    }
    .Name {
        margin: auto;
    }
    .InstallInfo {
        margin: auto;
    }
    .Instance {
        display: flex;
        scroll-snap-align: start;
        margin: 10px;
        border-color: var(--border-color);
        border-style: solid;
        border-width: 10px;
        border-radius: 10px;
        height: fit-content;
    }
    .InstanceInteractions {
        align-self: center;
        margin-left: auto;

        grid-area: InstanceInteractions;
        padding: 10px;
        display: flex;

        gap: 5px;
    }
</style>
